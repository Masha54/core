{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "tokens.schema.json",
  "type": "object",
  "required": ["tokens"],
  "properties": {
    "tokens": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "key", "exportPath", "since"],
        "properties": {
          "id": { "type": "string", "pattern": "^[a-z0-9-]+$" },
          "key": { "type": "string", "minLength": 1 },
          "exportPath": { "type": "string", "minLength": 1 },
          "since": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+(-[0-9A-Za-z.-]+)?$" },
          "status": { "enum": ["stable", "experimental", "deprecated"] },
          "description": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}